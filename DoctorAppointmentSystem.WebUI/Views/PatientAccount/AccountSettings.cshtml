@model Patient
@{
    Layout = "_PatientLayout";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">My Personal Informations</h5>
        <form method="post">
            <div class="row g-2 mb-3">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="@Model.FullName" type="text" class="form-control" id="floatingInputGrid" placeholder="Full Name" value="@Model.FullName">
                        <label for="floatingInputGrid">Full Name</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 mb-3">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="@Model.Email" type="email" class="form-control" id="floatingInputGrid" placeholder="name@example.com" value="@Model.Email">
                        <label for="floatingInputGrid">Email address</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="@Model.Phone" type="text" class="form-control" id="floatingInputGrid" placeholder="Phone" value="@Model.Phone">
                        <label for="floatingSelectGrid">Phone</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 mb-3">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="@Model.Age" type="text" class="form-control" id="floatingInputGrid" placeholder="Age" value="@Model.Age">
                        <label for="floatingInputGrid">Age</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <select asp-for="@Model.Gender" class="form-select" id="floatingSelectGrid" aria-label="Floating label select example">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <label for="floatingSelectGrid">Gender</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

