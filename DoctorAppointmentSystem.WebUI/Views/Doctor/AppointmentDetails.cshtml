@model Appointment
@{
    Layout = "_DoctorLayout";
}

<div class="card">
    <div class="card-body">
        <h1 style="font-size:28px" class="card-title fw-semibold mb-4">Appointment Details</h1>
        <p class="mb-1"><b>Date:</b>@Model.DateTime.ToString()</p>
        <p class="mb-1"><b>Doctor:</b>@Model.Doctor.FullName</p>
        @if (Model.IsApproved == State.Approved)
        {
            <span class="badge bg-success rounded-3 fw-semibold">Approved</span>
        }
        else if (Model.IsApproved == State.NotApproved)
        {
            <span class="badge bg-danger rounded-3 fw-semibold">Not Approved</span>
        }
        else if (Model.IsApproved == State.Waiting)
        {
            <span class="badge bg-warning rounded-3 fw-semibold">Waiting</span>
        }
        <hr />
        <br/>
        <h4 class="mb-2">Patient Details:</h4>
        <p class="mb-1"><b>Patient Name:</b>@Model.Patient.FullName</p>
        <p class="mb-1"><b>Patient Email:</b>@Model.Patient.Email</p>
        <p class="mb-1"><b>Patient Phone:</b>@Model.Patient.Phone</p>
        <p class="mb-1"><b>Patient Age:</b>@Model.Patient.Age</p>
        <br />
        <h4>Note:</h4>
        <form method="post" asp-controller="Doctor" asp-action="AppointmentDetails">
            <input type="hidden" name="id" value="@Model.AppointmentId" />
            <textarea name="note" style="width:100%;min-height:200px;">@Model.Note</textarea>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        
    </div>
</div>


